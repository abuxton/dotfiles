    '--sort-inputs-by-required[[deprecated] use '\''--sort-by-required'\'' instead]' \
    '--with-aggregate-type-defaults[[deprecated] print default values of aggregate types]' \
    "1: :->cmnds" \
    "*::arg:->args"

  case $state in
  cmnds)
    commands=(
