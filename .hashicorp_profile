function hashiqube() {
cd ~/hashiqube
vagrant up && vagrant up --provision-with terraform-enterprise

if [ ! -f '/etc/resolver/consul']
sudo cat <<EOF > /etc/resolver/consul
nameserver 10.9.99.10
port 8600
EOF

}


function hashicorp_health() {

consul members
vault status
consul license get
vault read sys/license
terraform version

}
