alias vault-dev="echo '#export VAULT_ADDR=http://127.0.0.1:8200' && vault server -dev -dev-root-token-id=root "

function vault_health () {
	vault status
  curl -k --header "X-Vault-Token: ${VAULT_TOKEN}"    'https://127.0.0.1:8200/v1/sys/config/state/sanitized' | jq
  curl -k https://127.0.0.1:8200/v1/sys/health | jq
  curl -k --header "X-Vault-Token: ${VAULT_TOKEN}"   'https://127.0.0.1:8200/v1/sys/metrics' | jq
  curl -k --header "X-Vault-Token: ${VAULT_TOKEN}"   'https://127.0.0.1:8200/v1/sys/license' | jq
  curl -k 'https://127.0.0.1:8200/v1/sys/replication/status' | jq
  curl -k --header "X-Vault-Token: ${VAULT_TOKEN}"  'https://127.0.0.1:8200/v1/sys/storage/raft/configuration' | jq
}
